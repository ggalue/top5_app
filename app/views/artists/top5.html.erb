<h1>G's Top Five Artists</h1>
<p>The highest rated artists in my library are...</p>

<div class="row">
  <% @artists.each_with_index do |artist, index| %>
  <% if index < @artists.length - 1 %>
  <div class="col-md-6">
  	<% else %>
  </div>
  <div class"col-md-6 col-md-offset-3">
  	<% end %>
    <div class="well">
      <h3><%= link_to artist.name, artist %></h3>
       <p><%= image_tag artist.avatar.url(:thumb) %></p>
       <p>
      <% artist.rating.times do %>
      <span class="glyphicon glyphicon-star" style="color:yellow"></span>
      <% end %>
      <% (10-(artist.rating)).times do%>
      <span class="glyphicon glyphicon-star"></span>
      <% end %>
      </p>
      <p>
        <%= link_to edit_artist_path(artist) do %>
        <span class="glyphicon glyphicon-pencil"></span> Edit
         <%end %>
         &nbsp;
         <%= link_to artist, method: :delete, data: { confirm: 'Are you sure?' } do  %>
         <span class="glyphicon glyphicon-trash"></span> Delete
         <% end %>
       </p>
    </div>
  </div>
  <% end %>
</div>


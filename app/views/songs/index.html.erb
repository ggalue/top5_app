<p id="notice"><%= notice %></p>

<h1>All Songs</h1>

<p>
<%= link_to new_song_path do %>
  <span class="glyphicon glyphicon-plus"></span> Add New Song
<% end %>
</p>

<div class="row">
  <% @songs.each do |song| %>
  <div class="col-md-6">
    <div class="well">
      <h3><%= link_to song.name, song %></h3>
      <p><%= song.artist.name %></p>
      <p>
      <% song.rating.times do %>
      <span class="glyphicon glyphicon-star" style="color:yellow"></span>
      <% end %>
      <% (10-(song.rating)).times do%>
      <span class="glyphicon glyphicon-star"></span>
      <% end %>
      </p>
      <p>
        <%= link_to edit_song_path(song) do %>
        <span class="glyphicon glyphicon-pencil"></span> Edit
         <%end %>
         &nbsp;
         <%= link_to song, method: :delete, data: { confirm: 'Are you sure?' } do  %>
         <span class="glyphicon glyphicon-trash"></span> Delete
         <% end %>
       </p>
     </div>
   </div>
   <% end %>
 </div>

<br>

